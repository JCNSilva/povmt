<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:layout_marginLeft="15dp"
    android:layout_marginRight ="15dp"
    android:layout_marginTop="30dp"
    android:weightSum="1"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/criar"
        android:textAlignment="center"
        android:textSize="30sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="#ddd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data:"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/textView6"
        android:layout_gravity="left" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginBottom="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="-40dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:id="@+id/numberPicker"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="-20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horas"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_marginTop="-70dp"
        android:layout_marginRight="80dp"
        android:layout_gravity="left" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="#ddd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atividade:"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_gravity="left"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_gravity="right"
        android:layout_marginTop="-40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText2" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton2"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:textOff="Trabalho"
            android:textOn="Trabalho" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lazer"
            android:id="@+id/toggleButton"
            android:layout_gravity="right"

            android:textOff="Lazer"
            android:textOn="Lazer"
            android:layout_marginTop="-48.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/textView3"
            android:layout_marginTop="-40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridade"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/textView4"
            android:layout_marginTop="30dp" />

        <Spinner
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_gravity="right"
            android:layout_marginTop="-59px" />

        <EditText
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAG"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/textView5"
            android:layout_marginTop="-30dp" />

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/button"
        android:layout_gravity="left|center_vertical"
        android:background="#e91212"
        android:textColor="#ffffff"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:background="#c1e457"
        android:textColor="#ffffff"
        android:layout_marginTop="-35px"
        android:layout_marginLeft="30px" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" />


</LinearLayout>
