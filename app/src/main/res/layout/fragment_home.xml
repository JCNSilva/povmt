<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="les.ufcg.edu.br.povmt.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/sem_ti"
            android:gravity="center"
            android:id="@+id/sem_ti"
            android:layout_weight="1" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_atividades">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semana Atual"
                        android:id="@+id/textView"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_horasinv_semana"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center|center_horizontal" />

                    <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/tv_horaslabel"-->
                    <!--android:text="@string/horas_investidas"-->
                    <!--android:textSize="16dp"-->
                    <!--android:paddingLeft="5dp"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:gravity="center_vertical|center|center_horizontal" />-->

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rview_atividades"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>
