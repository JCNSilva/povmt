                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rview_atividades3"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</ScrollView>