<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="les.ufcg.edu.br.povmt.fragments.ConfigurationsFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notificações"
        android:id="@+id/txt_notificar"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="false"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="false"
        android:layout_marginTop="20dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchNotificar"
        android:checked="true"
        android:layout_alignTop="@+id/txt_notificar"
        android:layout_toRightOf="@+id/txt_notificar"
        android:layout_toEndOf="@+id/txt_notificar"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Caso você esqueça de cadastrar &apos;TI´s&apos; em suas atividades, selecione a opção e ative o sistema de notificação do aplicativo."
        android:id="@+id/textConfig"
        android:textSize="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/switchNotificar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Intervalo de Notificação"
        android:id="@+id/txtHora"
        android:textSize="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textConfig"
        android:layout_centerHorizontal="true" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePickerHora"
        android:timePickerMode="spinner"
        android:layout_below="@+id/txtHora"
        android:layout_centerHorizontal="true" />

</RelativeLayout>